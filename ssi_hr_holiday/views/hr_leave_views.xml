<openerp>
    <data>
        <record id="hr_leave_view_tree" model="ir.ui.view">
            <field name="name">hr.leave.tree</field>
            <field name="model">hr.leave</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" invisible="1" />
                    <field name="display_name" string="# Document" />
                    <field name="date_start" string="Start Date" />
                    <field name="date_end" string="End date" />
                    <field name="employee_id" string="Employee" />
                    <field name="type_id" string="Type" />
                    <field name="number_of_days" string="No Of Days" invisible="1" />
                    <field name="user_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="hr_leave_view_search" model="ir.ui.view">
            <field name="name">hr.leave.search</field>
            <field name="model">hr.leave</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search>
                    <field name="id" />
                    <field name="name" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="user_id" />
                    <field name="state" />
                    <field name="employee_id" />
                    <!-- Filter -->
                    <filter
                        name="dom_my_data"
                        string="My Responsibilities"
                        domain="[('user_id','=',uid)]"
                    />
                    <group name="dom_state" string="States">
                        <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                        <filter
                            name="dom_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                        <filter
                            name="dom_done"
                            string="Done"
                            domain="[('state','=','done')]"
                        />
                        <filter
                            name="dom_cancel"
                            string="Cancelled"
                            domain="[('state','=','cancel')]"
                        />
                        <filter
                            name="dom_reject"
                            string="Rejected"
                            domain="[('rejected','=', True)]"
                        />
                    </group>
                    <!-- Group -->
                    <group name="group_by" string="Group By">
                        <filter
                            name="grp_date_start"
                            string="Date Start"
                            context="{'group_by':'date_start'}"
                        />
                        <filter
                            name="grp_date_end"
                            string="Date End"
                            context="{'group_by':'date_end'}"
                        />
                        <filter
                            name="grp_type_id"
                            string="Leave Type"
                            context="{'group_by':'type_id'}"
                        />
                        <filter
                            name="grp_employee_id"
                            string="Employee"
                            context="{'group_by':'employee_id'}"
                        />
                        <filter
                            name="grp_department_id"
                            string="Department"
                            context="{'group_by':'department_id'}"
                        />
                        <filter
                            name="grp_company"
                            string="Company"
                            groups="base.group_multi_company"
                            context="{'group_by':'company_id'}"
                        />
                        <filter
                            name="grp_responsible"
                            string="Responsible"
                            context="{'group_by':'user_id'}"
                        />
                        <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by': 'state'}"
                        />
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_leave_view_form" model="ir.ui.view">
            <field name="name">hr.leave.form</field>
            <field name="model">hr.leave</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button
                            name="request_validation"
                            string="Request Approval"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            type="object"
                        />
                        <button
                            name="restart_validation"
                            string="Restart Approval"
                            attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_approval_ok','=',False)]}"
                            type="object"
                        />
                        <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            attrs="{'invisible':['|', ('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                        <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel Data. Are you sure?"
                        />
                        <button
                            name="action_restart"
                            type="object"
                            string="Reset to Draft"
                            attrs="{'invisible':['|', ('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                        <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,done,cancel"
                        />
                        <field name="need_validation" invisible="1" />
                        <field name="validated" invisible="1" />
                        <field name="rejected" invisible="1" />
                        <div
                            class="alert alert-warning"
                            attrs="{'invisible': ['|', '|', '|',
                             ('validated', '=', True), ('state', 'not in', ['confirm']),
                             ('rejected', '=', True), ('review_ids', '=', [])]}"
                            style="margin-bottom:0px;"
                        >
                            <p><i
                                    class="fa fa-info-circle"
                                />This data needs to be validated.
                                <button
                                    name="validate_tier"
                                    string="Validate"
                                    attrs="{'invisible': [('review_ids', '=', [])]}"
                                    type="object"
                                    class="oe_inline oe_button btn-success"
                                    icon="terp-check"
                                />
                                <button
                                    name="reject_tier"
                                    string="Reject"
                                    type="object"
                                    class="btn-icon btn-danger"
                                    icon="terp-gtk-stop"
                                />
                            </p>
                        </div>
                        <div
                            class="alert alert-success"
                            attrs="{'invisible': ['|', '|', ('validated', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                            style="margin-bottom:0px;"
                        >
                            <p><i class="fa fa-thumbs-up" /> Operation has been <b
                                >validated</b>!</p>
                        </div>
                        <div
                            class="alert alert-danger"
                            attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('review_ids', '=', [])]}"
                            style="margin-bottom:0px;"
                        >
                            <p><i class="fa fa-thumbs-down" /> Operation has been <b
                                >rejected</b>.</p>
                        </div>
                    </header>
                    <sheet>
                        <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                        </div>
                        <div class="oe_left" style="width: 500px;">
                            <div class="oe_title" style="width: 500px;">
                                <label for="name" />
                                <h1>
                                    <field name="name" class="oe_edit_only" />
                                    <field name="display_name" class="oe_read_only" />
                                </h1>
                                <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                                    <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                                    <field name="cancel_reason_id" class="oe_inline" />
                                </h2>
                            </div>
                        </div>
                        <group name="header" colspan="4" col="2">
                            <group name="header_left" colspan="1" col="2">
                                <field
                                    name="company_id"
                                    groups="base.group_multi_company"
                                />
                                <field name="user_id" />
                                <field name="employee_id" />
                                <field name="type_id" />
                                <field name="department_id" />
                                <field name="manager_id" />
                                <field name="job_id" />
                            </group>
                            <group name="header_right" colspan="1" col="2">
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="sheet_id" />
                                <field
                                    name="number_of_days"
                                    string="No Of Days"
                                    invisible="1"
                                />
                                <field name="leave_duration" />
                                <field name="leave_allocation_id" />
                            </group>
                        </group>
                        <notebook>
                            <page name="schedule" string="Schedules">
                                <group name="schedule_1" colspan="4" col="2">
                                    <field name="schedule_ids" nolabel="1">
                                    </field>
                                </group>
                            </page>
                            <page string="Reviews" name="tier_validation">
                                <group>
                                    <field name="definition_id" />
                                    <field
                                        name="reviewer_partner_ids"
                                        widget="many2many_tags"
                                    />
                                    <field name="review_ids" readonly="1" />
                                </group>
                            </page>
                            <page
                                name="page_policy"
                                string="Policy"
                                groups="base.group_system"
                            >
                                <group name="group_policy_1" colspan="4" col="2">
                                    <field name="confirm_ok" />
                                    <field name="cancel_ok" />
                                    <field name="approve_ok" />
                                    <field name="reject_ok" />
                                    <field name="restart_ok" />
                                    <field name="restart_approval_ok" />
                                </group>
                            </page>
                            <page name="note" string="Note">
                                <field name="note" colspan="4" nolabel="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_leave_action" model="ir.actions.act_window">
            <field name="name">Leaves</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'readonly_by_pass': True}</field>
        </record>

        <menuitem
            id="menu_hr_leave"
            name="Leaves"
            parent="hr_leave_management_root_menu"
            action="hr_leave_action"
            sequence="100"
        />
    </data>
</openerp>
