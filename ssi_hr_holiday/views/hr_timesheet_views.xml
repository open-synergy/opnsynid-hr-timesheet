<odoo>

    <record id="hr_timesheet_view_leave_form" model="ir.ui.view">
        <field name="name">hr.timesheet_leave form</field>
        <field name="model">hr.timesheet</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="ssi_timesheet.hr_timesheet_view_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='computation']" position="before">
                    <page name="page_leave" string="Leaves">
                        <group name="leave_left" colspan="1" col="2">
                            <field
                                context="{'default_employee_id': employee_id, 'user_id':user_id}"
                                name="leave_ids"
                                nolabel="1"
                            >
                                <tree string="Leaves">
                                    <!-- <field invisible="1" name="create_date" /> -->
                                    <field name="date_start" />
                                    <field name="date_end" />
                                    <field name="type_id" />
                                    <!-- <field invisible="1" name="valid_check_in" /> -->
                                    <field name="number_of_days" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
