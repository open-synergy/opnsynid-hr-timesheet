<odoo>
    <record id="hr_leave_request_batch_internal_user_rule" model="ir.rule">
        <field name="name">Leave Request Batch - Internal Users</field>
        <field name="model_id" ref="model_hr_leave_request_batch" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="hr_leave_request_batch_company_rule" model="ir.rule">
        <field name="name">Leave Request Batch - Responsible to company data</field>
        <field name="model_id" ref="model_hr_leave_request_batch" />
        <field
            name="groups"
            eval="[(4, ref('hr_leave_request_batch_company_group'))]"
        />
        <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="hr_leave_request_batch_company_child_rule" model="ir.rule">
        <field name="name">Leave Request Batch - Company and All Child Companies</field>
        <field name="model_id" ref="model_hr_leave_request_batch" />
        <field
            name="groups"
            eval="[(4, ref('hr_leave_request_batch_company_child_group'))]"
        />
        <field
            name="domain_force"
        >[('company_id','child_of',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="hr_leave_request_batch_all_rule" model="ir.rule">
        <field name="name">Leave Request Batch - All</field>
        <field name="model_id" ref="model_hr_leave_request_batch" />
        <field name="groups" eval="[(4, ref('hr_leave_request_batch_all_group'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>
</odoo>
