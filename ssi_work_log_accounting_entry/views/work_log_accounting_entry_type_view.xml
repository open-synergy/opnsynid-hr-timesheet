<odoo>
    <record id="work_log_accounting_entry_type_view_tree" model="ir.ui.view">
        <field name="name">work_log_accounting_entry_type - Tree</field>
        <field name="model">work_log_accounting_entry_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="work_log_accounting_entry_type_view_search" model="ir.ui.view">
        <field name="name">work_log_accounting_entry_type - Search</field>
        <field name="model">work_log_accounting_entry_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="work_log_accounting_entry_type_view_form" model="ir.ui.view">
        <field name="name">work_log_accounting_entry_type - Form</field>
        <field name="model">work_log_accounting_entry_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                    <field name="direction" />
                    <field name="accrue_account_id" />
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page name="analytic" string="Allowed Analytics">
                        <group name="analytic_1" colspan="4" col="2">
                            <field
                                name="allowed_analytic_group_ids"
                                widget="many2many_tags"
                            />
                            <field
                                name="allowed_analytic_account_ids"
                                widget="many2many_tags"
                            />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="work_log_accounting_entry_type_action" model="ir.actions.act_window">
        <field name="name">Work Log to Acc. Entry Types</field>
        <field name="res_model">work_log_accounting_entry_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="work_log_accounting_entry_type_menu"
        name="Work Log to Acc. Entry Types"
        parent="ssi_timesheet.menu_hr_timesheet_configuration"
        action="work_log_accounting_entry_type_action"
        sequence="10"
        groups="work_log_accounting_entry_type_group"
    />
</odoo>
