<odoo>
    <record id="work_log_expense_internal_user_rule" model="ir.rule">
        <field name="name">Work Log Expense - Internal Users</field>
        <field name="model_id" ref="model_work_log_expense" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="work_log_expense_direct_subordinate_rule" model="ir.rule">
        <field
            name="name"
        >Work Log Expense - Responsible to direct subordinate data</field>
        <field name="model_id" ref="model_work_log_expense" />
        <field
            name="groups"
            eval="[(4, ref('work_log_expense_direct_subordinate_group'))]"
        />
        <field name="domain_force">[('employee_id.parent_id','=',user.employee_id.id)]
        </field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="work_log_expense_all_subordinate_rule" model="ir.rule">
        <field
            name="name"
        >Work Log Expense - Responsible to all subordinate data</field>
        <field name="model_id" ref="model_work_log_expense" />
        <field
            name="groups"
            eval="[(4, ref('work_log_expense_direct_all_subordinate_group'))]"
        />
        <field
            name="domain_force"
        >[('employee_id','child_of',user.employee_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="work_log_expense_company_rule" model="ir.rule">
        <field name="name">Work Log Expense - Responsible to company data</field>
        <field name="model_id" ref="model_work_log_expense" />
        <field name="groups" eval="[(4, ref('work_log_expense_company_group'))]" />
        <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="work_log_expense_company_child_rule" model="ir.rule">
        <field
            name="name"
        >Work Log Expense - Responsible to company and all child companies data
        </field>
        <field name="model_id" ref="model_work_log_expense" />
        <field
            name="groups"
            eval="[(4, ref('work_log_expense_company_child_group'))]"
        />
        <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="work_log_expense_all_rule" model="ir.rule">
        <field name="name">Work Log Expense - Responsible to all data</field>
        <field name="model_id" ref="model_work_log_expense" />
        <field name="groups" eval="[(4, ref('work_log_expense_all_group'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>
</odoo>
