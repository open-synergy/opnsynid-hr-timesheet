<odoo>
    <record id="work_log_expense_type_group" model="res.groups">
        <field name="name">Work Log Expense Type</field>
        <field name="category_id" ref="work_log_expense_configurator_module_category" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <!-- Workflow -->
    <record id="work_log_expense_viewer_group" model="res.groups">
        <field name="name">Viewer</field>
        <field name="category_id" ref="work_log_expense_workflow_module_category" />
    </record>

    <record id="work_log_expense_user_group" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="work_log_expense_workflow_module_category" />
        <field name="implied_ids" eval="[(4, ref('work_log_expense_viewer_group'))]" />
    </record>

    <record id="work_log_expense_validator_group" model="res.groups">
        <field name="name">Validator</field>
        <field name="category_id" ref="work_log_expense_workflow_module_category" />
        <field name="implied_ids" eval="[(4, ref('work_log_expense_user_group'))]" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <!-- Data Ownership -->
    <record id="work_log_expense_direct_subordinate_group" model="res.groups">
        <field name="name">Direct Subordinate</field>
        <field
            name="category_id"
            ref="work_log_expense_data_ownership_module_category"
        />
    </record>

    <record id="work_log_expense_direct_all_subordinate_group" model="res.groups">
        <field name="name">All Subordinate</field>
        <field
            name="category_id"
            ref="work_log_expense_data_ownership_module_category"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('work_log_expense_direct_subordinate_group'))]"
        />
    </record>

    <record id="work_log_expense_company_group" model="res.groups">
        <field name="name">Company</field>
        <field
            name="category_id"
            ref="work_log_expense_data_ownership_module_category"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('work_log_expense_direct_all_subordinate_group'))]"
        />
    </record>

    <record id="work_log_expense_company_child_group" model="res.groups">
        <field name="name">Company and All Child Companies</field>
        <field
            name="category_id"
            ref="work_log_expense_data_ownership_module_category"
        />
        <field name="implied_ids" eval="[(4, ref('work_log_expense_company_group'))]" />
    </record>

    <record id="work_log_expense_all_group" model="res.groups">
        <field name="name">All</field>
        <field
            name="category_id"
            ref="work_log_expense_data_ownership_module_category"
        />
        <field
            name="implied_ids"
            eval="[(4, ref('work_log_expense_company_child_group'))]"
        />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
</odoo>
