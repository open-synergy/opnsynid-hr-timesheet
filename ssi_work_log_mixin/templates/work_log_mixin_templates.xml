<odoo>
<template id="work_log_page">
    <page name="page_work_log" string="Work Log">
        <group name="grp_work_log" colspan="4">
            <field
                    name="work_log_ids"
                    nolabel="1"
                    context="{'work_log_model': active_model}"
                >
                <tree editable="bottom">
                    <field name="model_id" invisible="1" />
                    <field name="work_object_id" invisible="1" />
                    <field name="name" />
                    <field
                            name="allowed_analytic_account_ids"
                            widget="many2many_tags"
                            invisible="1"
                        />
                    <field
                            name="analytic_account_id"
                            domain="[('id', 'in', allowed_analytic_account_ids)]"
                        />
                    <field name="employee_id" />
                    <field name="date" />
                    <field name="sheet_id" />
                    <field name="amount" widget="float_time" />
                </tree>
            </field>
        </group>
    </page>
</template>
</odoo>
